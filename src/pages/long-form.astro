---
import PageLayout from '../layouts/PageLayout.astro';
import VideoCard from '../components/VideoCard.astro';
import VideoModal from '../components/VideoModal.astro';
import videos from '../data/longform.json';
---

<PageLayout
  title="Long-form — Boğaç Ülker"
  description="YouTube videos and long-form content edited by Boğaç Ülker."
>
  <section class="page-section">
    <header class="page-header scroll-animate">
      <h1 class="page-title">Long-form</h1>
      <p class="page-description">
        Documentary edits, highlight packages, and cinematic sports content.
      </p>
    </header>

    <div class="video-grid stagger-children">
      {videos.map((video) => (
        <VideoCard {...video} />
      ))}
    </div>
  </section>

  <VideoModal />
</PageLayout>

<style>
  .page-section {
    padding: var(--space-8);
    max-width: 1200px;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: var(--space-8);
  }

  .page-title {
    font-size: var(--text-2xl);
    font-weight: 500;
    color: var(--color-text-primary);
    margin-bottom: var(--space-2);
  }

  .page-description {
    font-size: var(--text-md);
    color: var(--color-text-secondary);
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--content-gap);
  }

  @media (max-width: 900px) {
    .video-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }

  @media (max-width: 768px) {
    .page-section {
      padding: var(--space-6) var(--space-4);
    }

    .page-header {
      margin-bottom: var(--space-6);
    }

    .page-title {
      font-size: var(--text-xl);
    }
  }
</style>
