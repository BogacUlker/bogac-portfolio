---
import PageLayout from '../layouts/PageLayout.astro';

const aboutData = {
  name: 'Boğaç Ülker',
  title: 'Video Editor & Motion Designer',
  location: 'Dublin, Ireland',
  bio: 'I am a visual storyteller obsessed with rhythm and emotion. My work bridges the gap between raw documentary realism and stylized cinematic precision. From highlight reels to full documentaries, I craft stories that resonate.',
  services: [
    'Video Editing',
    'Motion Graphics',
    'Color Grading',
    'Sound Design',
    'Sports Content',
  ],
  tools: [
    'Adobe Premiere Pro',
    'After Effects',
    'DaVinci Resolve',
    'Cinema 4D',
  ],
  experience: [
    { company: 'Socrates Magazine', role: 'Video Editor', current: true },
    { company: 'ShyftUp', role: 'Motion Designer', current: false },
    { company: 'TRTSPOR', role: 'TV Contributor', current: false },
  ],
  clients: [
    'FAI',
    'Shamrock Rovers',
    'Socrates Magazine',
    'TRTSPOR',
  ],
};
---

<PageLayout
  title="About — Boğaç Ülker"
  description="Learn about Boğaç Ülker's background, skills, and experience."
>
  <section class="about-section">
    <div class="about-grid">
      <!-- Left Column: Profile -->
      <div class="profile-column">
        <div class="profile-image-wrapper">
          <img
            src="/images/profile.jpg"
            alt={aboutData.name}
            class="profile-image"
          />
        </div>
        <h1 class="profile-name">{aboutData.name}</h1>
        <p class="profile-title">{aboutData.title}</p>
        <p class="profile-location">
          <i class="ph ph-map-pin icon-sm"></i>
          {aboutData.location}
        </p>
        <p class="profile-bio">{aboutData.bio}</p>
      </div>

      <!-- Right Column: Details -->
      <div class="details-column">
        <!-- Services -->
        <div class="detail-section">
          <h2 class="detail-title">Services</h2>
          <ul class="detail-list">
            {aboutData.services.map((service) => (
              <li class="detail-item">{service}</li>
            ))}
          </ul>
        </div>

        <!-- Tools -->
        <div class="detail-section">
          <h2 class="detail-title">Tools</h2>
          <ul class="detail-list">
            {aboutData.tools.map((tool) => (
              <li class="detail-item">{tool}</li>
            ))}
          </ul>
        </div>

        <!-- Experience -->
        <div class="detail-section">
          <h2 class="detail-title">Experience</h2>
          <ul class="experience-list">
            {aboutData.experience.map((exp) => (
              <li class="experience-item">
                <span class="experience-company">{exp.company}</span>
                <span class="experience-role">{exp.role}</span>
                {exp.current && <span class="experience-current">Current</span>}
              </li>
            ))}
          </ul>
        </div>

        <!-- Clients -->
        <div class="detail-section">
          <h2 class="detail-title">Clients</h2>
          <ul class="detail-list">
            {aboutData.clients.map((client) => (
              <li class="detail-item">{client}</li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  .about-section {
    padding: var(--space-8);
    max-width: 1000px;
    margin: 0 auto;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--space-16);
  }

  /* Profile Column */
  .profile-column {
    text-align: center;
  }

  .profile-image-wrapper {
    width: 180px;
    height: 180px;
    margin: 0 auto var(--space-6);
    border-radius: 50%;
    overflow: hidden;
    background-color: var(--color-bg-card);
  }

  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profile-name {
    font-size: var(--text-xl);
    font-weight: 500;
    margin-bottom: var(--space-1);
  }

  .profile-title {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
  }

  .profile-location {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-1);
    margin-bottom: var(--space-6);
  }

  .profile-bio {
    font-size: var(--text-md);
    line-height: 1.7;
    color: var(--color-text-secondary);
    text-align: left;
  }

  /* Details Column */
  .details-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .detail-section {
    border-bottom: 1px solid var(--color-border-subtle);
    padding-bottom: var(--space-6);
  }

  .detail-section:last-child {
    border-bottom: none;
  }

  .detail-title {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .detail-list {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .detail-item {
    font-size: var(--text-md);
    color: var(--color-text-primary);
    background-color: var(--color-bg-card);
    padding: var(--space-2) var(--space-4);
    border-radius: 4px;
  }

  .experience-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .experience-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-md);
  }

  .experience-company {
    color: var(--color-text-primary);
    font-weight: 500;
  }

  .experience-role {
    color: var(--color-text-secondary);
  }

  .experience-current {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--color-text-primary);
    background-color: var(--color-bg-card);
    padding: var(--space-1) var(--space-2);
    border-radius: 3px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .about-section {
      padding: var(--space-4);
    }

    .about-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .profile-image-wrapper {
      width: 140px;
      height: 140px;
    }
  }
</style>
