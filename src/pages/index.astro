---
import BaseLayout from '../layouts/BaseLayout.astro';

// Loop video data - will be replaced with actual Bunny.net URLs
const loops = [
  { id: 1, src: '', poster: '/images/posters/loop-1.jpg', alt: 'Match highlight edit' },
  { id: 2, src: '', poster: '/images/posters/loop-2.jpg', alt: 'Sports documentary' },
  { id: 3, src: '', poster: '/images/posters/loop-3.jpg', alt: 'Motion graphics' },
  { id: 4, src: '', poster: '/images/posters/loop-4.jpg', alt: 'Action sequence' },
  { id: 5, src: '', poster: '/images/posters/loop-5.jpg', alt: 'Color grading' },
  { id: 6, src: '', poster: '/images/posters/loop-6.jpg', alt: 'Cinematic edit' },
  { id: 7, src: '', poster: '/images/posters/loop-7.jpg', alt: 'Fast paced cut' },
  { id: 8, src: '', poster: '/images/posters/loop-8.jpg', alt: 'Visual effects' },
];

const navItems = [
  { href: '/long-form', label: 'Long-form' },
  { href: '/shorts', label: 'Shorts' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<BaseLayout
  title="Boğaç Ülker — Video Editor & Motion Designer"
  description="Sports-focused video editor and motion designer based in Dublin."
>
  <div class="landing">
    <!-- Desktop: 3x3 Grid -->
    <div class="grid-desktop">
      {/* Row 1 */}
      <div class="grid-cell">
        <div class="video-placeholder" data-loop-id="1"></div>
      </div>
      <div class="grid-cell">
        <div class="video-placeholder" data-loop-id="2"></div>
      </div>
      <div class="grid-cell">
        <div class="video-placeholder" data-loop-id="3"></div>
      </div>

      {/* Row 2 */}
      <div class="grid-cell">
        <div class="video-placeholder" data-loop-id="4"></div>
      </div>
      <div class="grid-cell center-cell">
        <div class="center-content">
          <h1 class="logo">bogaç ülker</h1>
          <p class="subtitle">video editor & motion designer</p>
          <nav class="nav">
            {navItems.map((item) => (
              <a href={item.href} class="nav-link">{item.label}</a>
            ))}
          </nav>
        </div>
      </div>
      <div class="grid-cell">
        <div class="video-placeholder" data-loop-id="5"></div>
      </div>

      {/* Row 3 */}
      <div class="grid-cell">
        <div class="video-placeholder" data-loop-id="6"></div>
      </div>
      <div class="grid-cell">
        <div class="video-placeholder" data-loop-id="7"></div>
      </div>
      <div class="grid-cell">
        <div class="video-placeholder" data-loop-id="8"></div>
      </div>
    </div>

    <!-- Mobile: Header + 2x4 Grid -->
    <div class="mobile-layout">
      <header class="mobile-header">
        <h1 class="logo">bogaç ülker</h1>
        <p class="subtitle">video editor & motion designer</p>
        <nav class="nav">
          {navItems.map((item) => (
            <a href={item.href} class="nav-link">{item.label}</a>
          ))}
        </nav>
      </header>

      <div class="grid-mobile">
        {loops.map((loop) => (
          <div class="grid-cell-mobile">
            <div class="video-placeholder" data-loop-id={loop.id}></div>
          </div>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .landing {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background-color: var(--color-bg-primary);
  }

  /* Desktop 3x3 Grid */
  .grid-desktop {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: var(--grid-gap);
    width: 100%;
    height: 100%;
    padding: var(--grid-gap);
  }

  .grid-cell {
    background-color: var(--color-bg-secondary);
    overflow: hidden;
    position: relative;
  }

  .video-placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-bg-card);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Center Cell */
  .center-cell {
    background-color: var(--color-bg-primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .center-content {
    text-align: center;
    padding: var(--space-4);
  }

  .logo {
    font-size: var(--text-lg);
    font-weight: 500;
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-1);
    color: var(--color-text-primary);
  }

  .subtitle {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  .nav {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .nav-link {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--color-text-secondary);
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--color-text-primary);
  }

  /* Mobile Layout */
  .mobile-layout {
    display: none;
    flex-direction: column;
    height: 100%;
  }

  .mobile-header {
    text-align: center;
    padding: var(--space-6) var(--space-4);
    background-color: var(--color-bg-primary);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .grid-mobile {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--grid-gap);
    padding: var(--grid-gap);
    overflow-y: auto;
  }

  .grid-cell-mobile {
    aspect-ratio: 16 / 9;
    background-color: var(--color-bg-secondary);
    overflow: hidden;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .grid-desktop {
      display: none;
    }

    .mobile-layout {
      display: flex;
    }

    .logo {
      font-size: var(--text-md);
    }

    .subtitle {
      font-size: 9px;
      margin-bottom: var(--space-4);
    }

    .nav {
      gap: var(--space-3);
    }

    .nav-link {
      font-size: var(--text-xs);
    }
  }
</style>
