---
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoCell from '../components/VideoCell.astro';

// Loop video data - will be replaced with actual Bunny.net URLs in Faz 4
const loops = [
  { id: 1, src: '', poster: '/images/posters/loop-1.jpg', alt: 'Match highlight edit' },
  { id: 2, src: '', poster: '/images/posters/loop-2.jpg', alt: 'Sports documentary' },
  { id: 3, src: '', poster: '/images/posters/loop-3.jpg', alt: 'Motion graphics' },
  { id: 4, src: '', poster: '/images/posters/loop-4.jpg', alt: 'Action sequence' },
  { id: 5, src: '', poster: '/images/posters/loop-5.jpg', alt: 'Color grading' },
  { id: 6, src: '', poster: '/images/posters/loop-6.jpg', alt: 'Cinematic edit' },
  { id: 7, src: '', poster: '/images/posters/loop-7.jpg', alt: 'Fast paced cut' },
  { id: 8, src: '', poster: '/images/posters/loop-8.jpg', alt: 'Visual effects' },
];

const navItems = [
  { href: '/long-form', label: 'Long-form' },
  { href: '/shorts', label: 'Shorts' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

// Helper to get loop by position (1-8, skipping center which is position 5)
const getLoopForPosition = (position: number) => {
  // Positions: 1,2,3,4 (center),5,6,7,8,9 -> loops: 1,2,3,4,skip,5,6,7,8
  const loopIndex = position <= 4 ? position - 1 : position - 2;
  return loops[loopIndex];
};
---

<BaseLayout
  title="Boğaç Ülker — Video Editor & Motion Designer"
  description="Sports-focused video editor and motion designer based in Dublin."
>
  <div class="landing">
    <!-- Desktop: 3x3 Grid -->
    <div class="grid-desktop">
      {/* Row 1 */}
      <div class="grid-cell">
        <VideoCell {...getLoopForPosition(1)} />
      </div>
      <div class="grid-cell">
        <VideoCell {...getLoopForPosition(2)} />
      </div>
      <div class="grid-cell">
        <VideoCell {...getLoopForPosition(3)} />
      </div>

      {/* Row 2 */}
      <div class="grid-cell">
        <VideoCell {...getLoopForPosition(4)} />
      </div>
      <div class="grid-cell center-cell">
        <div class="center-content">
          <h1 class="logo">bogaç ülker</h1>
          <p class="subtitle">video editor & motion designer</p>
          <nav class="nav">
            {navItems.map((item, index) => (
              <>
                <a href={item.href} class="nav-link">{item.label}</a>
                {index < navItems.length - 1 && <span class="nav-separator">|</span>}
              </>
            ))}
          </nav>
        </div>
      </div>
      <div class="grid-cell">
        <VideoCell {...getLoopForPosition(6)} />
      </div>

      {/* Row 3 */}
      <div class="grid-cell">
        <VideoCell {...getLoopForPosition(7)} />
      </div>
      <div class="grid-cell">
        <VideoCell {...getLoopForPosition(8)} />
      </div>
      <div class="grid-cell">
        <VideoCell {...getLoopForPosition(9)} />
      </div>
    </div>

    <!-- Mobile: Header + 2x4 Grid -->
    <div class="mobile-layout">
      <header class="mobile-header">
        <h1 class="logo">bogaç ülker</h1>
        <p class="subtitle">video editor & motion designer</p>
        <nav class="nav">
          {navItems.map((item, index) => (
            <>
              <a href={item.href} class="nav-link">{item.label}</a>
              {index < navItems.length - 1 && <span class="nav-separator">|</span>}
            </>
          ))}
        </nav>
      </header>

      <div class="grid-mobile">
        {loops.map((loop) => (
          <div class="grid-cell-mobile">
            <VideoCell {...loop} />
          </div>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .landing {
    width: 100vw;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for mobile */
    overflow: hidden;
    background-color: var(--color-bg-primary);
  }

  /* Desktop 3x3 Grid */
  .grid-desktop {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: var(--grid-gap);
    width: 100%;
    height: 100%;
    padding: var(--grid-gap);
  }

  .grid-cell {
    background-color: var(--color-bg-secondary);
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .grid-cell:not(.center-cell):hover {
    transform: scale(1.02);
    z-index: 10;
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.8);
  }

  /* Center Cell */
  .center-cell {
    background-color: var(--color-bg-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color-border-subtle);
  }

  .center-cell:hover {
    transform: none;
    box-shadow: none;
  }

  .center-content {
    text-align: center;
    padding: var(--space-6);
  }

  .logo {
    font-size: clamp(1rem, 2vw, 1.5rem);
    font-weight: 500;
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-2);
    color: var(--color-text-primary);
  }

  .subtitle {
    font-size: clamp(0.5rem, 0.8vw, 0.625rem);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  .nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .nav-link {
    font-size: clamp(0.5rem, 0.7vw, 0.6875rem);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--color-text-secondary);
    transition: color 0.2s ease;
    padding: var(--space-1) 0;
  }

  .nav-link:hover {
    color: var(--color-text-primary);
  }

  .nav-separator {
    color: var(--color-text-subtle);
    font-size: clamp(0.5rem, 0.7vw, 0.6875rem);
    user-select: none;
  }

  /* Mobile Layout */
  .mobile-layout {
    display: none;
    flex-direction: column;
    height: 100%;
  }

  .mobile-header {
    text-align: center;
    padding: var(--space-5) var(--space-4);
    background-color: var(--color-bg-primary);
    border-bottom: 1px solid var(--color-border-subtle);
    flex-shrink: 0;
  }

  .grid-mobile {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--grid-gap);
    padding: var(--grid-gap);
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }

  .grid-cell-mobile {
    aspect-ratio: 16 / 9;
    background-color: var(--color-bg-secondary);
    overflow: hidden;
    border-radius: 2px;
  }

  /* Tablet (768px - 1024px) */
  @media (max-width: 1024px) and (min-width: 769px) {
    .center-content {
      padding: var(--space-4);
    }

    .nav {
      gap: var(--space-2);
    }
  }

  /* Mobile (< 768px) */
  @media (max-width: 768px) {
    .grid-desktop {
      display: none;
    }

    .mobile-layout {
      display: flex;
    }

    .logo {
      font-size: var(--text-md);
    }

    .subtitle {
      font-size: 9px;
      margin-bottom: var(--space-4);
    }

    .nav {
      gap: var(--space-2);
    }

    .nav-link {
      font-size: 10px;
    }

    .nav-separator {
      font-size: 10px;
    }
  }

  /* Small mobile (< 480px) */
  @media (max-width: 480px) {
    .mobile-header {
      padding: var(--space-4) var(--space-3);
    }

    .nav {
      gap: var(--space-1);
    }

    .nav-link {
      font-size: 9px;
      letter-spacing: 0.05em;
    }
  }

  /* Landscape mobile */
  @media (max-width: 768px) and (orientation: landscape) {
    .mobile-header {
      padding: var(--space-3) var(--space-4);
    }

    .subtitle {
      margin-bottom: var(--space-2);
    }

    .grid-mobile {
      grid-template-columns: repeat(4, 1fr);
    }

    .grid-cell-mobile {
      aspect-ratio: 16 / 9;
    }
  }
</style>
